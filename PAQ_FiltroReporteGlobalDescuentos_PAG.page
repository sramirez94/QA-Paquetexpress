<!--
  @description       : Ventana para ingresar el rango de fechas para el reporte global de descuentos autorizados.
  @author            : Salvador Ramírez López (sramirez@freewayconsulting.com)
-->
<apex:page>
    <!-- estilos personalizados -->
    <apex:stylesheet value="{!URLFOR($Resource.PAQ_Resources,'css/custom-styles.css')}" />
    <!-- jquery  -->
    <apex:includeScript value="{!$Resource.PAQ_JQuery}"/>
    <!-- Boostrap css -->
    <apex:stylesheet value="{!URLFOR($Resource.PAQ_Boostrap3, 'bootstrap-3.3.7-dist/css/bootstrap.min.css')}"/>
    <!-- jquery UI 11.2.1 css-->
    <apex:stylesheet value="{!URLFOR($Resource.PAQ_JQuery_UI_1121, 'jquery-ui-1.12.1/jquery-ui.min.css')}"/>
    <!-- Boostrap js -->
    <apex:includeScript value="{!URLFOR($Resource.PAQ_Boostrap3,'bootstrap-3.3.7-dist/js/bootstrap.min.js')}"/>
    <!-- jquery UI 11.2.1 js-->
    <apex:includeScript value="{!URLFOR($Resource.PAQ_JQuery_UI_1121, 'jquery-ui-1.12.1/jquery-ui.min.js')}"/>
    <!-- Recurso Sforce -->
    <apex:includeScript value="/support/console/40.0/integration.js"/>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
        <style>
            body{
                font-size: 12px !important;
            }
            .alertDanger{
                color: #721c24;
                background-color: #f8d7da;
                border-color: #f5c6cb;
            }

            .invalid{
                color: #721c24 !important;
                background-color: #f8d7da !important;
                border-color: #f5c6cb !important;
            }

            .bold{
                font-weight: bold;
            }
            .btn-primary {
                color: #ffffff !important;
                background-color: #337ab7 !important;
                font-size: 17px !important;
            }
            .btn-default {
                color: #333 !important;
                background-color: #ccc !important;
                font-size: 17px !important;
            }
            .disabled{
                background-color: #d28e8e;
            }
            .ng-touched.missing{
                border-color: #c52d2d;
                border-style: solid;
            }
            .ng-touched.valid{
                border-color: #2fc52d;
                border-style: solid;
            }
            .modal-dialog.big-modal{
                width: 80% !important;
            }
            .pad3{
                padding-left: 5px;
            }
            .right{
                text-align: right;
            }
            .center{
                text-align: center;
            }
            .rouded{
                border-radius: 100px;
                padding-left: 6px;
                width: 25%;
            }
            .rouded-med{
                border-radius: 100px;
                padding-left: 6px;
                width: 75%;
            }
            .row{
                padding-bottom: 5px;
            }
            select{
                width: 100%;
                border-radius: 4px;
            }
            .select{
                width: initial;
            }
            .tableTitle{
                font-weight: bold;
                text-align: center;
            }
            .thead-light {
                color: #495057;
                background-color: #e9ecef;
                border-color: #dee2e6;
            }
            .v-center {
                min-height:200px;
                display: flex;
                justify-content:center;
                flex-flow: column wrap;
            }
            .circle{
                height: 15px;
                width: 15px;
                border-radius: 50%;
                display: inline-block;
                margin-top: 2px;
                background-color: #A7A7A7;
            }
            .green {
                background-color: #2aa734;
            }
            .yellow {
                background-color: #dad100;
            }
            .red {
                background-color: #a70616;
            }
        </style> 
    </head>
    <apex:form>
        <apex:pageMessages />
        <br/>
        <div align="center" style="width: 500px;" draggable="false">  
            <apex:pageBlock mode="edit" >
                <table class="table table-hover">
                    <div style="background-color: #E2E9EA;"  >
                        <br></br>
                        <apex:outputText value="Cotizaciones autorizadas" />
                        <br></br><br></br>
                    </div>
                    <br/>
                    <tr>
                        <td ><strong>Fecha inicio</strong></td>
                        <td><input type="date" id="start" name="trip-start" value="2021-01-01" min="1900-01-01" max="2030-12-31"/></td>
                        <td ><strong>Fecha fin</strong></td>
                        <td><input type="date" id="end" name="trip-end" value="2021-01-01" minm="1900-01-01" max="2030-12-31"/></td>
                    </tr>
                    <div style="background-color: #E2E9EA;"  >
                        <br></br>
                        <apex:outputText value="Decuento real" />
                        <br></br><br></br>
                    </div>
                    <tr>
                        <td ><strong>Fecha inicio</strong></td>
                        <td><input type="date" id="startDR" name="trip-start-DR" value="2021-01-01" min="1900-01-01" max="2030-12-31"/></td>
                        <td ><strong>Fecha fin</strong></td>
                        <td><input type="date" id="endDR" name="trip-end-DR" value="2021-01-01" minm="1900-01-01" max="2030-12-31"/></td>
                    </tr>
                </table>
                <apex:pageBlockButtons location="bottom">
                    <apex:commandButton style="btn-primary" action="{! quicksave }" value="Iniciar proceso" />
                </apex:pageBlockButtons>
            </apex:pageBlock>
        </div>
    </apex:form>
</apex:page>
